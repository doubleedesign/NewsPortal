<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >

    <!--Logo-->
    <LinearLayout
        android:id="@+id/linearLayout_logoWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">
        <ImageView
            android:id="@id/imageView_logo"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>


    <!--RecyclerView for latest article-->
    <LinearLayout
        android:id="@+id/layout_newsWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_below="@id/linearLayout_logoWrapper"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_latestNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:text="Powered by NewsAPI.org"
            android:textSize="12sp"
            android:textColor="#CCC"
            />
    </LinearLayout>


    <!--RecyclerView list of category links-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layout_newsWrapper"
        />

</RelativeLayout>